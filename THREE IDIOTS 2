import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int x1=sc.nextInt();
        int y1=sc.nextInt();
        int x2=sc.nextInt();
        int y2=sc.nextInt();
        double X=(x1+x2)/2.0;
        double Y=(y1+y2)/2.0;
        System.out.printf("Binoy's house is located at (%.1f,%.1f)",X,Y);
        
    }
}
